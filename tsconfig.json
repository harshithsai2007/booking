{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@server/*": [
                "server/src/*"
            ],
            "@client/*": [
                "client/src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "client/node_modules",
        "server/node_modules"
    ]
}